#!/bin/sh
# TauOS Init Script

echo "ğŸ¢ Starting TauOS..."

# Mount essential filesystems
mount -t proc none /proc
mount -t sysfs none /sys
mount -t devtmpfs none /dev

# Set up networking
ifconfig lo 127.0.0.1 up

echo "ğŸ¢ TauOS started successfully!"
echo "ğŸ¢ Welcome to TauOS!"
echo "ğŸ¢ This is a minimal bootable system for testing"
echo "ğŸ¢ Type 'exit' to shutdown"

exec /bin/sh
