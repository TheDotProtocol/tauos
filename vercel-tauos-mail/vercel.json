{
  "version": 2,
  "redirects": [
    {
      "source": "/",
      "destination": "https://www.tauos.org/taumail",
      "permanent": false
    },
    {
      "source": "/(.*)",
      "destination": "https://www.tauos.org/taumail",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        }
      ]
    }
  ]
} 